@model IEnumerable<BuilderDesignPattern.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComputerInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemConfigurationDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseAllowance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalAllowance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComputerInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemConfigurationDetails)
            </td>
            <td>
                <a asp-action="BuildSystem" asp-route-employeeID="@item.Id">Build System</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
