@model int
@{
    ViewData["Title"] = "BuildSystem";
}

<h1>Build System</h1>
<h4>Build a desktop system</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuildSystem">
            @Html.Hidden("employeeID", this.Model.ToString())
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">RAM</label>
                <select name="RAM" class="form-control" aria-label="Default select example">
                    <option selected>Select a RAM for the system</option>
                    <option value="8GB">8 GB</option>
                    <option value="16GB">16 GB</option>
                    <option value="32GB">32 GB</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Drive</label>
                <select name="Drive" class="form-control" aria-label="Default select example">
                    <option selected>Select a Drive for the system</option>
                    <option value="500GB">500 GB</option>
                    <option value="1TB">1 TB</option>
                </select>
            </div>
            <div class="form-group">
                @Html.Label("KeyBoard", "KeyBoard", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("KeyBoard",
                   new List<SelectListItem>() {
                     new  SelectListItem (){  Text = "Select", Value="Select"},
                      new  SelectListItem (){  Text = "Wireless", Value="Wireless"},
                      new  SelectListItem (){  Text = "Regular-USB", Value="Regular-USB"},
                   }, htmlAttributes: new { @class = "form-control" })

                </div>
            </div>
            <div class="form-group">
                @Html.Label("Mouse","Mouse", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Mouse",
                   new List<SelectListItem>() {
                     new  SelectListItem (){  Text = "Select", Value="Select"},
                      new  SelectListItem (){  Text = "Wireless", Value="Wireless"},
                      new  SelectListItem (){  Text = "Regular-USB", Value="Regular-USB"},
                   }, htmlAttributes: new { @class = "form-control" })

                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
